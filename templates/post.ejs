        <div id="accordion">
        <% posts.forEach(function(post, i){ %>
            <article id="post<%= i %>" class="post">
                <header>
                    <a href="#post<%= i %>"><h1><%= post.title %></h1></a>
                    <h2>Written by <span class="author"><%= post.username %></span> on <time><%= post.date %></time>.<h2>
                </header>
                <div class="contentPanel">
                    <p>
                        <%= post.body %>
                    </p>
                    <div class="buttonRow">
                        <button class="deletePostBtn" type="button">Delete</button>
                        <button class="editPostBtn" type="button">Edit</button>
                    </div>
                </div>
            </article>
             

        <% }); %>        
        </div>
        
        <script>
        $("#accordion").accordion({ 
            header: "header",
            active: "false",
            collapsible: "true"
        });
        // JavaScript to provide Edit/Delete button functionality
        
            $(".deletePostBtn").on('click', function(){
                
                $.ajax('/', {
                    data: { title: $(this).parents('.contentPanel').siblings('header').find('h1').text(),
                            username: $(this).parents('.contentPanel').siblings('header').find('.author').text(),
                            body: $(this).parents('.contentPanel').find('p').text()
                          },
                    type: "DELETE"
                        
                });
            });
            
            $(".editPostBtn").click(function(){
                
                //Fill new post form fields with values from post
                
                $("#userField").val("$(this).closest('a').text()");
                $("#titleField").val("$(this).closest('h1').text()");
                $("#postField").val("$(this).closest('p').text()");
                
                //Change submit button to use Ajax method instead of default
                
                $("#postForm :submit").click(function( e ){
                    e.preventDefault();
                    $.ajax('/', {
                        data: { title: $(this).closest('h1').text(), 
                                body: $(this).closest('p').text()
                            },
                        type: "PUT",
                        success: alert("Post updated.")
                    });
                });                
            });
        
        </script>



<div class="row">
    <div class="large-6 columns">
        <dl class="accordion" data-accordion>
        <% posts.forEach(function(post){ %>
        <dd>
            <a href="#<%= post._id %>"><h3><%= post.title %></h3></a>
            <div id="<%= post._id %>" class="content">
            
            <%= post.body %>
            </div>
        </dd>
        <% }); %>
        </dl>
    </div>    
</div>



